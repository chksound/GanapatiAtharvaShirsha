<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:isScrollContainer="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="@dimen/main_activity_vertical_margin"
            android:paddingLeft="@dimen/main_activity_horizontal_margin"
            android:paddingRight="@dimen/main_activity_horizontal_margin"
            android:paddingTop="@dimen/main_activity_vertical_margin">
            <TextView
                android:id="@+id/Shree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/Shree"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Shree"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/ganapati_logo"
                android:scaleType="centerInside"
                android:src="@drawable/ganapati"/>
            <Button
                android:id="@+id/btnEnglish"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:text="@string/menu_english"/>
            <Button
                android:id="@+id/btnSanskrit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnEnglish"
                android:text="@string/menu_sanskrit"/>
            <Button
                android:id="@+id/btnMeaning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSanskrit"
                android:text="@string/menu_meaning"/>
            <Button
                android:id="@+id/btnPlay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnMeaning"
                android:text="@string/menu_audio"/>
            <Button
                android:id="@+id/btnStotra"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnPlay"
                android:text="@string/menu_stotra"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/btnAarati"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnStotra"
                android:text="@string/menu_aarati"
                android:textSize="20dp"/>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="40px"
                android:layout_below="@+id/btnAarati"
                android:id="@+id/spaceb"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonPro"
                android:layout_below="@+id/spaceb"
                android:src="@drawable/proversion"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_margin="0dp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
